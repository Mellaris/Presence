<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Attendance.Desktop.ViewModels"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Attendance.Desktop.Views.GroupView"
		x:CompileBindings ="False"
		x:DataType="vm:GroupViewModel">

	<Design.DataContext>
		<vm:GroupViewModel/>
	</Design.DataContext>
	<DockPanel Background="Azure">
		<StackPanel DockPanel.Dock="Bottom">
			<TextBlock Text="List â†‘" HorizontalAlignment="Center"/>
		</StackPanel>
		<StackPanel
			Spacing="10"
			HorizontalAlignment="Center"
			DockPanel.Dock="Top"
			Orientation="Horizontal">
			<TextBlock Text="Combobox ->"/>
			<ComboBox  ItemsSource="{Binding Groups}" SelectedValue="{Binding SelectedGroupItem}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}"/>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<Button  Width="100" Command="{Binding OpenFileDialog}"/>
			<ComboBox/>
		</StackPanel>
		<Border>
			<ListBox Background="Bisque" ItemsSource="{Binding Users}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{Binding Name}" />
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Border>
	</DockPanel>
</Window>
